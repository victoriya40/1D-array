import java.util.Scanner;
public class Main{
	public static void main(String[] args) {
	    Scanner sc=new Scanner(System.in);
	    int n=sc.nextInt();
	    int[]arr=new int[n];
	    for(int i=0;i<n;i++){
	        arr[i]=sc.nextInt();
	    }
	   int sumEven=0;
	   for(int num:arr){
	       if(num%2==0){
	           sumEven+=num;
	       }
	   }
	       System.out.println("sum of Even numbers in the arrays:"+sumEven);
	   }
}
